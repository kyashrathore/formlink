{
  "name": "formlink",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "dev:fill": "turbo run dev --filter=@formlink/formfiller",
    "dev:craft": "turbo run dev --filter=formcraft",
    "dev:all": "turbo run dev --parallel --filter=@formlink/formfiller --filter=formcraft",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "type-check": "turbo run type-check",
    "quality-check": "./scripts/quality-check.sh",
    "prepare": "husky install",
    "storybook": "pnpm --filter ui-docs storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@formlink/eslint-config": "workspace:*",
    "@formlink/typescript-config": "workspace:*",
    "@types/hast": "^3.0.4",
    "husky": "^9.1.7",
    "knip": "^5.61.3",
    "lint-staged": "^15.2.11",
    "prettier": "^3.5.3",
    "turbo": "^2.5.2",
    "zod": "^3.25.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.10.0",
  "dependencies": {
    "@radix-ui/react-slider": "^1.3.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@types/uuid": "^10.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.18.0",
    "libphonenumber-js": "^1.12.7",
    "lucide-react": "^0.298.0",
    "react": "^18.3.1",
    "react-day-picker": "^9.6.7",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^4.1.5",
    "uuid": "^11.1.0",
    "zustand": "^4.5.6"
  }
}
